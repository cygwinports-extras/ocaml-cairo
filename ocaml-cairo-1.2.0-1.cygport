GIT_URI="git://anongit.freedesktop.org/cairo-ocaml"
inherit git ocaml

DESCRIPTION="OCaml bindings for cairo and libsvg-cairo"
HOMEPAGE="http://cairographics.org/cairo-ocaml"

DIFF_EXCLUDES="aclocal.m4 configure"

src_compile() {
	cd ${S}
	aclocal -I support || error
	autoconf -f || error
	lndirs

	cd ${B}
	cygconf --with-gtk
	cygmake -j1
}
