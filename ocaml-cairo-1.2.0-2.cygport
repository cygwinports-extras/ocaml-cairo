inherit ocaml

DESCRIPTION="OCaml bindings for cairo and libsvg-cairo"
HOMEPAGE="http://cairographics.org/cairo-ocaml"
SRC_URI="http://cgit.freedesktop.org/cairo-ocaml/snapshot/cairo-ocaml-${PV}.tar.bz2"
SRC_DIR="cairo-ocaml-${PV}"

DIFF_EXCLUDES="aclocal.m4 configure"

src_compile() {
	cd ${S}
	aclocal -I support || error
	autoconf -f || error
	lndirs

	cd ${B}
	cygconf --with-gtk
	cygmake -j1
}
